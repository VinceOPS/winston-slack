{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "sourceMap": true,
    "allowJs": false,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": [
    "./lib/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}